<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          Style="{StaticResource PageStyle}"
             x:Class="Imi.Project.Mobile.Pages.GamePage"
             Title="Game">

    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="btnAdd" Text="Add" Clicked="Add_Clicked" HorizontalOptions="Center" Style="{StaticResource Add}"/>
            <ListView x:Name="lvGameList" ItemTapped="OpenGame">
            <ListView.ItemTemplate>
                <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <FlexLayout Style="{StaticResource AlignItems}">
                                    <Label Text="{Binding Name}" Style="{StaticResource Title}"/>
                                    <Label Text="{Binding Price}"/>
                                </FlexLayout>
                            </StackLayout>
                        </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>